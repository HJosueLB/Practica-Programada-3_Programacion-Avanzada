@model IEnumerable<Práctica_Programada.Models.Comment>

@{
    ViewBag.Title = "Comentarios del blog";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">

            <h2 class="mb-4 text-primary">Comentarios del Blog</h2>

            @if (TempData["Welcome"] != null)
            {
                <div class="alert alert-success text-center font-weight-bold">
                    @TempData["Welcome"]
                </div>
            }

            <div class="card mb-4">
                <div class="card-body">
                    <p><i class="fas fa-user"></i> <strong>Usuario logueado:</strong> @ViewBag.UserName</p>
                    <p><i class="fas fa-comments"></i> <strong>Total comentarios:</strong> @ViewBag.TotalComentarios</p>
                    @Html.ActionLink("Cerrar sesión", "Logout", "Authentication", null, new { @class = "btn btn-outline-danger btn-sm mt-2" })
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Agregar comentario</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label for="content">Comentario:</label>
                            <textarea name="content" class="form-control" rows="4" placeholder="Escribe tu comentario..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Lista de comentarios</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p class="text-muted">No hay comentarios aún.</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (var c in Model)
                            {
                                <li class="list-group-item">
                                    <p><strong>@c.User.Name</strong> dijo:</p>
                                    <blockquote class="blockquote mb-2">
                                        <p class="mb-0">@c.Content</p>
                                    </blockquote>
                                    <small class="text-muted">@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
