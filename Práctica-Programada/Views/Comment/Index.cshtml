@model IEnumerable<Práctica_Programada.Models.Comment>

@{
    ViewBag.Title = "Comentarios del blog";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="mb-4 text-center">
                <h1 class="display-5 text-primary fw-bold">Comentarios del Blog</h1>
                <p class="text-muted">Conecta con otros lectores y comparte tu opinión.</p>
            </div>

            @if (TempData["Welcome"] != null)
            {
                <div class="alert alert-success shadow-sm text-center fw-bold mb-4">
                    @TempData["Welcome"]
                </div>
            }

            <div class="card shadow-sm mb-4">
                <div class="card-body d-flex justify-content-between flex-wrap">
                    <div>
                        <p class="mb-1"><i class="fas fa-user text-secondary"></i> <strong>Usuario:</strong> @ViewBag.UserName</p>
                        <p class="mb-0"><i class="fas fa-comments text-secondary"></i> <strong>Comentarios:</strong> @ViewBag.TotalComentarios</p>
                    </div>
                    <div class="align-self-end">
                        @Html.ActionLink("Cerrar sesión", "Logout", "Authentication", null, new { @class = "btn btn-outline-danger btn-sm mt-2" })
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-5">
                <div class="card-header bg-white border-bottom-0">
                    <h5 class="mb-0 text-dark">Agregar nuevo comentario</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="content" class="form-label">Escribe tu comentario</label>
                            <textarea name="content" class="form-control" rows="4" placeholder="Ej: Me encantó este artículo..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Publicar</button>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom-0">
                    <h5 class="mb-0 text-dark">Comentarios recientes</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p class="text-muted">Aún no hay comentarios publicados. Sé el primero en participar.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var c in Model)
                            {
                                <div class="list-group-item list-group-item-action mb-2 border rounded shadow-sm">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1 text-primary">@c.User.Name</h6>
                                        <small class="text-muted">@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">@c.Content</p>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
