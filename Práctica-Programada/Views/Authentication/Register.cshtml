@model Práctica_Programada.Models.User

@{
    ViewBag.Title = "Registro - Practica Programada";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Integración Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Integración CSS -->
    <link href="~/Content/custom/login-style.css" rel="stylesheet" />
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <div class="login-title">Practica Programada</div>
            <div class="subtitle">Crea tu cuenta</div>

            <!-- Mensajes -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @using (Html.BeginForm("Register", "Authentication", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3 text-start">
                    <label class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Apellidos</label>
                    @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Lastname, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Correo</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Contraseña</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-login w-100">Registrarse</button>
            }

            <p class="mt-3">
                <span>¿Ya tienes cuenta?</span>
                <a class="register-link" href="@Url.Action("Login", "Authentication")"> Inicia sesión aquí</a>
            </p>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
