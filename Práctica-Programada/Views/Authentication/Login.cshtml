@{
    ViewBag.Title = "Login - Practica Programada";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Integración Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Integración CSS -->
    <link href="~/Content/custom/login-style.css" rel="stylesheet" />
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <div class="login-title">Practica Programada</div>
            <div class="subtitle">Inicia sesión para continuar</div>

            <!-- Mensajes -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3 text-start">
                    <label class="form-label">Correo</label>
                    <input type="email" name="email" class="form-control" placeholder="correo@gmail.com" required />
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Contraseña</label>
                    <input type="password" name="password" class="form-control" placeholder="••••••" required />
                </div>

                <button type="submit" class="btn btn-login w-100">Iniciar sesión</button>
            }

            <p class="mt-3">
                <span>¿No tienes cuenta?</span>
                <a class="register-link" href="@Url.Action("Register", "Authentication")">Regístrate aquí</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
